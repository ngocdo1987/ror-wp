<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%= @mt %> - Ruby On Rails Admin</title>
    <%= csrf_meta_tags %>

    <!-- Bootstrap Core CSS -->
    <%= stylesheet_link_tag '/admin/vendor/bootstrap/css/bootstrap.min', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- MetisMenu CSS -->
    <%= stylesheet_link_tag '/admin/vendor/metisMenu/metisMenu.min', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- Custom CSS -->
    <%= stylesheet_link_tag '/admin/dist/css/sb-admin-2', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- Custom Fonts -->
    <%= stylesheet_link_tag '/admin/vendor/font-awesome/css/font-awesome.min', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    	<%= javascript_include_tag "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js" %>
        <%= javascript_include_tag "https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js" %>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Ruby On Rails Admin</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li><a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li><a href="#"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <%= render 'elements/admin/sidebar' %>
            
        </nav>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header"><%= @mt %></h1>

                        <%= yield %>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <%= javascript_include_tag '/admin/vendor/jquery/jquery.min', 'data-turbolinks-track': 'reload' %>

    <!-- Bootstrap Core JavaScript -->
    <%= javascript_include_tag '/admin/vendor/bootstrap/js/bootstrap.min', 'data-turbolinks-track': 'reload' %>

    <!-- Metis Menu Plugin JavaScript -->
    <%= javascript_include_tag '/admin/vendor/metisMenu/metisMenu.min', 'data-turbolinks-track': 'reload' %>

    <!-- Custom Theme JavaScript -->
    <%= javascript_include_tag '/admin/dist/js/sb-admin-2', 'data-turbolinks-track': 'reload' %>

</body>

</html>